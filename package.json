{
  "name": "cardvault",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0",
    "dev:turbo": "next dev --turbopack -H 0.0.0.0",
    "dev:clean": "npm run kill-port && next dev -H 0.0.0.0",
    "build": "next build",
    "start": "next start -H 0.0.0.0",
    "start:clean": "npm run kill-port && next start -H 0.0.0.0",
    "lint": "next lint",
    "kill-port": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true",
    "kill-all": "pkill -f next 2>/dev/null || true",
    "clean-dev": "npm run kill-all && next dev -H 0.0.0.0",
    "migrate:sqlite-to-postgres": "node scripts/migrate-sqlite-to-postgres.js",
    "verify:migration": "node scripts/verify-migration.js",
    "db:setup": "psql -d $POSTGRES_DB -U $POSTGRES_USER -f schema_postgresql.sql"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/multer": "^2.0.0",
    "@types/pg": "^8.15.5",
    "@types/qrcode": "^1.5.5",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.2",
    "multer": "^2.0.2",
    "next": "15.4.3",
    "next-auth": "^4.24.11",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
